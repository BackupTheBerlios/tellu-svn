sub menuDevice {
	my ($arg) = @_;

	my @r = &sendCommand({ command => "listDevice", item => "", domain => "", param => "manufacturer,model,category", option => "" });

	if(checkError({ packet => \@r }) == 0) {
		my @o = ();
		my @t = ();
		my %l = ();

		if($r[3] && $r[3] ne "") {
			$t[0] = $q->optgroup( -name => "Device Groups", -values => [ "Device summary", "Device listing" ], -class => "header" );

			foreach my $e (split(/$ITEM_DELIMITER/, $r[3])) {
				my @s = split(/$ITEM_SEPARATOR/, $e);

				push @o, $s[0];
				$l{$s[0]} = $s[1] . " " . $s[2] . " (" . $s[3] . ")";
			}

			$t[1] = $q->optgroup( -name => "Devices", -values => \@o, -labels => \%l, -class => "header" );

			$PAGE .= &htmlFormBegin({ name => "devicesForm", action => $SELF, enctype => "application/x-www-form-urlencoded", method => "post" });

			$PAGE .= &htmlSelectMenu({ name => "deviceNode", value => \@t, select => $arg->{select} });
			$PAGE .= "&nbsp;";
			$PAGE .= &htmlButtonSubmit({ name => "submit", value => "Switch >>" });

			$PAGE .= &htmlFormEnd();

			$PAGE .= "<p>&nbsp;</p>";
		}
		else {
			@t[0] = 0;
			$l{0} = "No items available";

			$PAGE .= &htmlFormBegin({ name => "devicesForm", action => $SELF, enctype => "application/x-www-form-urlencoded", method => "post" });

			$PAGE .= &htmlSelectMenu({ name => "deviceNode", value => \@t, label => \%l, select => $arg->{select}, disabled => 1 });
			$PAGE .= "&nbsp;";
			$PAGE .= &htmlButtonSubmit({ name => "submit", value => "Switch >>", disabled => 1 });

			$PAGE .= &htmlFormEnd();

			$PAGE .= "<p>&nbsp;</p>";
		}

		return(0);
	}

	return(-1);
}

