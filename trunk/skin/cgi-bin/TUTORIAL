# this is a comment

def VARIABLE, VALUE					define new variable
set VARIABLE, VALUE					set variable value
dup VARIABLE, NEW_VARIABLE				duplicate variable as new variable
unset VARIABLE						unset variable
show VARIABLE						display variable value

special variables:
	debug		on|off|yes|no
	delimiter	|
	output		here|file

pin CHECKPOINT						set checkpoint
goto CHECKPOINT						goto checkpoint
terminate STATUS	ok|okay|fail|failed		terminate expression

if VARIABLE CHECK VALUE goto CHECKPOINT			if condition

	CHECK:
		equals
		is_greater_than
		is_greater_or_equals
		is_smaller_than
		is_smaller_or_equals

increment VARIABLE, AMOUNT				increment variable value by AMOUNT
subtract VARIABLE, AMOUNT				decrement variable value by AMOUNT
multiply VARIABLE, MULTIPLIER				multiply variable by MULTIPLIER
divide VARIABLE, DIVIDER				divide variable by DIVIDER
modulo VARIABLE, MODULO					?
power VARIABLE, EXP					?



----- EXAMPLE, SIMPLE LOOP -----

set debug, no
def counter, 20

pin startover
	show counter
	subtract counter, 1
	if counter is_greater_than 10 goto startover

terminate ok

