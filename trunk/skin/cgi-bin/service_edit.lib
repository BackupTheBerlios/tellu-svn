sub editProviderNew {
	my ($arg) = @_;

	if($q->param('verb') && $q->param('verb') eq "create") {
		my $er = 0;
		my $na = "";
		my $st = "";
		my $zi = "";
		my $ci = "";
		my $co = "";

		if($q->param('name') && $q->param('name') ne "") {
			$na = $q->param('name');
		}
		else {
			$PAGE .= "<p class=\"warning\">Service provider name cannot be empty.</p>";
		}

